
@{
    ViewData["Title"] = "Categorias";
}

<h1>Index</h1>

<p>
    <a asp-area="" asp-controller="Category" asp-action="Create">Criar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Item
            </th>
            <th>
                Ações
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <td>@item.Id</td>
            <td>@item.Descricao</td>
            <td>
                <a asp-action="Show" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Atualizar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        }
    </tbody>
</table>
